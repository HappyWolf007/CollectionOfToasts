<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Светлая тема -->
    <style name="AppTheme_Light" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimaryDark">#5D2317</item> <!-- верхняя часть -->
        <item name="colorPrimary">#5D2317</item> <!-- часть с названием -->

        <item name="colorAccent">@color/accentColor_light</item>
        <item name="backgroundColor">@color/backgroundColor_light</item>

        <item name="customColorValue">@color/primaryDarkColor_light2</item>
        <item name="actionBarStyle">@color/accentColor_light</item>


        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>

        <item name="textAppearanceBody1"> @color/white</item> <!-- текст на кнопке -->
        <item name="textAppearanceBody2">  @color/accentColor_light</item> <!-- текст в главном меню -->
        <item name="android:textColor">@color/accentColor_light</item>

        <item name="iconTint"> @color/accentColor_light</item>
    </style>


    <!-- Тёмная тема -->
    <style name="AppTheme_Dark" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/primaryColor_light</item>
        <item name="backgroundColor">@color/backgroundColor_dark</item>
        <item name="customColorValue">@color/backgroundColor_dark</item>
        <item name="actionBarStyle">@color/primaryColor_light</item>
        <item name="textAppearanceBody1"> @color/primaryColor_light</item> <!-- текст на кнопках -->
        <item name="textAppearanceBody2"> @color/white</item> <!-- текст в главном меню -->
        <item name="android:textColor">@color/white</item>

        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
        <item name="iconTint"> @color/primaryColor_light</item>

        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>

    </style>


    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="queryBackground">@color/white</item>
        <item name="color">@color/white</item>

    </style>
</resources>